<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_background" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="72dp"
            android:src="@drawable/player_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="92dp"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnStop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/player_button_image_help_stop" />

                <ImageView
                    android:id="@+id/btnChangeQuestion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/player_button_image_help_change_question" />

                <ImageView
                    android:id="@+id/btn5050"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/player_button_image_help_5050" />

                <ImageView
                    android:id="@+id/btnAskAudients"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/player_button_image_help_audience" />

                <ImageView
                    android:id="@+id/btnCall"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/player_button_image_help_call" />
            </TableRow>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/player_question_background" />

                <FrameLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="-4dp"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/player_order_question"
                        />
                    <TextView
                        android:id="@+id/txtQuestionNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="{question number}"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center"
                        />
                </FrameLayout>

                <com.sang.ailatrieuphu.presentation.view.widget.StrokedTextView
                    android:id="@+id/txtQuestion"
                    android:layout_width="360dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="{question}"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <FrameLayout
                    android:id="@+id/btnAnswerA"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="320dp"
                    android:layout_height="68dp"
                    >
                    <ImageView
                        android:id="@+id/ivAnswerA"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/player_answer_background_normal"/>
                    <TextView
                        android:id="@+id/txtAnswerA"
                        android:layout_marginStart="44dp"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="{Answer-A}"
                        android:layout_gravity="center_vertical"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/btnAnswerB"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="320dp"
                    android:layout_height="68dp"
                    >
                    <ImageView
                        android:id="@+id/ivAnswerB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/player_answer_background_normal"/>

                    <TextView
                        android:id="@+id/txtAnswerB"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="{Answer-A}"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="44dp"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/btnAnswerC"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="320dp"
                    android:layout_height="68dp"
                    >
                    <ImageView
                        android:id="@+id/ivAnswerC"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/player_answer_background_normal"/>
                    <TextView
                        android:id="@+id/txtAnswerC"
                        android:layout_marginStart="44dp"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="{Answer-A}"
                        android:layout_gravity="center_vertical"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/btnAnswerD"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="320dp"
                    android:layout_height="68dp"
                    >
                    <ImageView
                        android:id="@+id/ivAnswerD"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/player_answer_background_normal"/>
                    <TextView
                        android:id="@+id/txtAnswerD"
                        android:layout_marginStart="44dp"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="{Answer-A}"
                        android:layout_gravity="center_vertical"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnPlayer"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_no_avatar" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ProgressBar
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"

                    android:indeterminateDrawable="@drawable/progessbar_timer" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/img_money" />

                <TextView
                    android:id="@+id/txtMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="000"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/loutStart"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/player_background"
            />
    </FrameLayout>

    <include
        android:id="@+id/ltMoneyBoard"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        layout="@layout/player_layout_money"
        />
</androidx.drawerlayout.widget.DrawerLayout>