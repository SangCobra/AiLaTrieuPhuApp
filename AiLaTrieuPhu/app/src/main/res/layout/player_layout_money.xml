<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/player_money_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv150"
                    android:scaleType="fitXY"
                    android:layout_width="320dp"
                    android:layout_gravity="center"
                    android:src="@drawable/player_image_money_milestone"
                    android:layout_height="match_parent" />

                <com.sang.ailatrieuphu.presentation.view.widget.StrokedTextView
                    style="@style/MoneyTextStyle"
                    android:text="150,000,000" />
            </FrameLayout>

            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv85"
                    style="@style/BgMoneyImageStyle"
                     />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="85,000,000" />
            </FrameLayout>

            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv60"
                    style="@style/BgMoneyImageStyle"
                 />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="60,000,000" />
            </FrameLayout>

            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv40"
                    style="@style/BgMoneyImageStyle"
                   />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="40,000,000" />
            </FrameLayout>

            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv30"
                    style="@style/BgMoneyImageStyle"
                    />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="30,000,000" />
            </FrameLayout>


            <FrameLayout
                    style="@style/MoneyFLStyle"
                >
                <ImageView
                    android:id="@+id/iv22"
                    android:scaleType="fitXY"
                    android:layout_width="320dp"
                    android:layout_gravity="center"
                    android:src="@drawable/player_image_money_milestone"
                    android:layout_height="match_parent" />

                <com.sang.ailatrieuphu.presentation.view.widget.StrokedTextView
                    style="@style/MoneyTextStyle"
                    android:layout_height="wrap_content"
                    android:text="22,000,000" />
            </FrameLayout>

            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv14"
                    style="@style/BgMoneyImageStyle"
                 />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="14,000,000" />
            </FrameLayout>

            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv10"
                    style="@style/BgMoneyImageStyle"
                   />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="10,000,000" />
            </FrameLayout>

            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv6"
                    style="@style/BgMoneyImageStyle"
                    />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="6,000,000" />
            </FrameLayout>

            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv3"
                    style="@style/BgMoneyImageStyle"
                     />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="3,000,000" />
            </FrameLayout>

            <FrameLayout
                style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv2"
                    android:scaleType="fitXY"
                    android:layout_width="320dp"
                    android:layout_gravity="center"
                    android:src="@drawable/player_image_money_milestone"
                    android:layout_height="match_parent" />

                <com.sang.ailatrieuphu.presentation.view.widget.StrokedTextView
                    style="@style/MoneyTextStyle"
                    android:text="2,000,000" />
            </FrameLayout>

            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv1"
                    style="@style/BgMoneyImageStyle"
                    />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="1,000,000" />
            </FrameLayout>

            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv6tr"
                    style="@style/BgMoneyImageStyle"
                  />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="600,000" />
            </FrameLayout>
            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv4tr"
                    style="@style/BgMoneyImageStyle"
                    />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="400,000" />
            </FrameLayout>
            <FrameLayout style="@style/MoneyFLStyle">

                <ImageView
                    android:id="@+id/iv2tr"
                    style="@style/BgMoneyImageStyle" />

                <TextView
                    style="@style/MoneyTextStyle"
                    android:text="200,000" />
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/btnHide"
            android:layout_margin="8dp"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/btn_hide">
            <com.sang.ailatrieuphu.presentation.view.widget.StrokedTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="Hide"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>